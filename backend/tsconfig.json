{
	"compilerOptions": {
    "module": "commonjs",   
    "target": "ESNext",
    "types": ["node"],
		"lib": ["ES6", "ESNext", "dom"],
		"strict": true,
		"skipLibCheck": true,
    "noImplicitAny": false,
    "sourceMap": false,
		"outDir": "dist",
		"moduleResolution": "node",
		"typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"allowJs": true,

		"importHelpers": true,
		"alwaysStrict": true,
		"baseUrl": ".",
		// "rootDir": "./src"
	},
	"resolve": {
		"extensions": [".js", ".tsx", ".ts"]
	},
	"exclude": ["dist/**"],
  "include": [
    "src/**/*.ts"
  ],
}